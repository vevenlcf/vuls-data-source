  "impact": {
    "cvss": [
      {
        "version": "2.0",
        "severity": {
          "type": "Base",
          "text": "Medium"
        },
        "base": "4.7",
        "vector": "AV:L/AC:M/Au:N/C:N/I:C/A:N"
