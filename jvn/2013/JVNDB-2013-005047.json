      "name": "ISC, Inc.",
      "product_name": "BIND",
      "version_number": [
        "9.6-ESV-R10-P1 未満の 9.6-ESV",
        "9.8.6-P1 未満の 9.8",
        "9.9.3-S1",
        "9.9.4-P1 未満の 9.9",
        "9.9.4-S1"
      ],
